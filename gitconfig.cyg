[github]
    user = janwe

[core]
    excludesfile = ~/homestash/gitignore_global
#    autocrlf = input
    autocrlf = true
    quotepath = false
    precomposeunicode = true

[credential]
    helper = cache --timeout=86400

[push]
    default = simple

[color]
    branch = auto
    diff = auto
    status = auto

[diff]
    guitool = kdiff3

[merge]
    renamelimit = 3250
    tool = kdiff3

[difftool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
    trustExitCode = false

[mergetool "kdiff3"]
    path = C:/Program Files/KDiff3/kdiff3.exe
    keepBackup = false
    trustExitCode = false

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    st = status
    cl = config -l
    sl = stash list
#    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
#    log = log --graph --decorate=full --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
